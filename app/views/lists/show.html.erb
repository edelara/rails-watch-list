<div class="container">
  <ul class="list-unstyled">
    <li><h2><%= @list.name %></h2></li>
  </ul>
  <p><strong>Movies</strong></p>
  <ul class="list-group mb-3">
    <% @list.bookmarks.each do |bookmark| %>
      <li class="list-group-item">Title: <%= bookmark.movie.title %></li>
      <p><%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"text-decoration-none text-black-50" %></p>
    <% end %>
  </ul>
  <p><%= link_to "Add new movie", new_list_bookmark_path(@list), class:"text-decoration-none text-black-50" %></p>
</div>
